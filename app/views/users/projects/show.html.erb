<div class="image-title">
  <%= cl_image_tag @project.photo.key, class: "img w-100", height: 180, width: 300 %>
</div>
<h1 class="title"> <%= @project.title %> </h1>
<br>
<div class="container">
  <div class="description">
    <h5 style="font-weight: bold;">Description</h5>
    <p class="descriptionbody" style="margin-left: 5px; margin-right: 5px;"> <%= @project.description %> </p>
  </div>
  <hr>
  <div class="footer">
    <% if @project.progress == 1 %>
      <% @questions.each do |question| %>
        <div style="margin-bottom: 10px;">
          <%= question.title %>
        </div>
        <hr>
        <% if @user.feedbacks.where(question_id: question) != [] %>
          <div class="text-success" style="outline-style: auto;">
            <p>Vous avez r√©pondu a cette question</p>
          </div>
        <% else %>
          <%= link_to "Donnez votre avis", new_users_question_feedback_path(question), class: "btn btn-blue" %>
        <% end %>
      <% end %>
    <% end %>
    <div class="back" style="font-weight: bold; margin-bottom: 15px;">
      <%#= link_to "Retour", users_projects_path %>
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Retour</button>
    </div>
  </div>
</div>
