<div class="background">
  <div class="box shadow-lg p-3 mb-5 bg-white rounded">
    <div class="container">
        <h3><%= @question.title %></h3>
        
        <%= simple_form_for [:users, @question, @feedback] do |f| %>
         <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :answer, label: 'Fais un choix', as: :radio_buttons, collection: [
            @question.first_answer, @question.second_answer] %>
        </div>

        <div class="form-actions">
            <%= f.button :submit, "Soumettre", class: "btn btn-blue m-3" %>
        </div>
          <%= link_to "Repondre plus tard", :back %>
      <% end %>
    </div>
  </div>
</div>
