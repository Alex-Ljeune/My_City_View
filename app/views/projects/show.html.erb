<%= render 'shared/navbar' %>
<div class="background">
  <div class="box">
    <div class="image-title">
      <%= cl_image_tag @project.photo.key, height: 180, width: 286 %>
      <h1 class="title"> <%= @project.title %> </h1>
    </div>
    <div class="description">
      <h5>Description</h5>
      <p class="descriptionbody"> <%= @project.description %> </p>
    </div>
   <div class="footer">
      <%= link_to "Ajouter une question", new_project_question_path(@project),class: "btn btn-blue" %>
      <%= link_to "Modifier", edit_project_path(@project), class: "btn btn-blue" %>
      <%= link_to "Supprimer", project_path(@project), method: :delete, class: "btn btn-blue", data: {confirm: "Are you sure?"} %> 
     <div class="back">
        <%= link_to "Retour", projects_path %> 
      </div>
    </div>
  </div>
</div>
