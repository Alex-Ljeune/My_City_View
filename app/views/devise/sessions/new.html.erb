<div class="background">
  <div class="title-container">
    <h1 class="title">
      <span> <img src="<%= asset_path 'logo_transparent.png'%>" style="width: 150px;"  alt="logo"></span>
    </h1>
  </div>
  <div id="loginform" class="box shadow-lg p-3 mb-5 rounded">
    <div class="container">
      <h2 class="title">Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      class: "email" %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" },
                      class: "password" %>
          <%= f.input :remember_me, class: "remember-me", as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-blue" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
